<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="mbill.khandelwal.harsh.m_bill.MainActivity">

    <TextView

        android:layout_width="47sp"
        android:layout_height="wrap_content"
        android:textColor="#070000"
        android:textSize="19sp"
        android:id="@+id/textView8"
        android:layout_alignBaseline="@+id/editText4"
        android:layout_alignBottom="@+id/editText4" />

    <TextView
        android:text="       Welcome to m-Bill"
        android:textColor="#ffffff"
        android:textSize="30sp"
        android:fontFamily="cursive"
        android:textStyle="bold"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView2"
        android:layout_marginTop="31dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="Company / Store Name :"
        android:textSize="20sp"
        android:textColor="#070000"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView4"
        android:layout_below="@+id/textView2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="38dp" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:hint="        Enter The Company/Store Name"
        android:ems="10"
        android:id="@+id/editText2"
        android:layout_alignTop="@+id/textView4"
        android:layout_alignParentStart="true"
        android:layout_marginTop="38dp" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:hint="                   First + Middle + Last "
        android:ems="10"
        android:id="@+id/editText4"
        android:layout_marginBottom="11dp"
        android:layout_above="@+id/button"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="Customer Name :"
        android:textSize="20sp"
        android:textColor="#070000"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView5"
        android:layout_above="@+id/editText4"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="15dp" />

    <Button
        android:text="Select products"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/textView5"
        />
</RelativeLayout>
